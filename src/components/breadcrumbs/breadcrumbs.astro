---
type dir = {
  name: string;
  url: string;
};

const path = Astro.url.pathname
  .split('/')
  .filter((entry) => entry.trim() !== '');

const dirs: dir[] = [];
let memo = 'https://gergus.no/';
path.forEach((dir) => {
  memo = memo + dir + '/';
  dirs.push({
    name: dir.replaceAll('%20',' '),
    url: memo,
  });
});

const first: dir = {
  name:'gergus.no',
  url:'/'
}

dirs.unshift(first);
---


<div class='md:hidden pt-6 px-6 font-bold text-xl'>
  {
    dirs.map((dir) => {
      return (
        <!-- prettier-ignore -->
        <>{dirs[0] != dir && <a>/</a>}<a 
        class='last-of-type:border-b-[2px] border-accent' 
        href={dir.url}
        >{dir.name}</a></>
      );
    })
  }
</div>
