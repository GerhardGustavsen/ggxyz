---
import './blog.scss';
const { frontmatter } = Astro.props;
const path = frontmatter.url
  .split('/')
  .filter((entry: string) => entry.trim() !== '');
const filename = path[path.length - 1];
---

<div class='smal'>
  <div class='flex'>
    <slot />
    <div class='font-bold mr-[0.5em]'>{frontmatter.title}</div>
    <slot />
  </div>
  <p class='border-fgLight border-t-[1px] mb-6'>
    {new Date(filename).toLocaleDateString('en-UK')}
  </p>
</div>
